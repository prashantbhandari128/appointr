<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Appointr | @ViewData["Title"]</title>
    
    <!-----------------------------------[Favicon]----------------------------------------->
    <link rel="apple-touch-icon" sizes="180x180" href="~/favicon/apple-touch-icon.png">
    <link rel="icon" type="image/png" sizes="32x32" href="~/favicon/favicon-16x16.png">
    <link rel="icon" type="image/png" sizes="16x16" href="~/favicon/favicon-32x32.png">
    <link rel="manifest" href="~/favicon/site.webmanifest">
    <!------------------------------------------------------------------------------------->

    <!------------------------------[Bootstrap CSS]--------------------------------->
    <link rel="stylesheet" href="~/lib/bootstrap/bootstrap.min.css" />

    <!-------------------------------[toastr CSS]----------------------------------->
    <link rel="stylesheet" href="~/lib/toastr/toastr.css">

    <!-----------------------------[Fontawesome CSS]-------------------------------->
    <link rel="stylesheet" href="~/lib/fontawesome-pro/css/all.css" />

    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Appointr.styles.css" asp-append-version="true" />
</head>

<body>
    <!-----------------------------[Jquery]-------------------------------->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>

    <!----------------------------[toastr JS]------------------------------>
    <script src="~/lib/toastr/toastr.js"></script>

    <nav class="navbar navbar-light bg-light p-3">
        <div class="d-flex col-12 col-md-3 col-lg-2 mb-2 mb-lg-0 flex-wrap flex-md-nowrap justify-content-between">
            <a asp-controller="dashboard" asp-action="index" class="navbar-brand">
                Appointr
            </a>
            <button class="navbar-toggler d-md-none collapsed mb-3" type="button" data-toggle="collapse" data-target="#sidebar" aria-controls="sidebar" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
        </div>
    </nav>
    <div class="container-fluid">
        <div class="row">
            <nav id="sidebar" class="col-md-3 col-lg-2 d-md-block bg-light sidebar collapse">
                <div class="position-sticky">
                    <ul class="nav flex-column">
                        <li class="nav-item">
                            <a asp-controller="dashboard" asp-action="index" class="nav-link @(ViewData["Title"]?.ToString() == "Dashboard" ? "active" : String.Empty)">
                                <i class="fa-solid fa-desktop fa-lg"></i>
                                <span class="ml-2">Dashboard</span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a asp-controller="post" asp-action="index" class="nav-link @(ViewData["Title"]?.ToString() == "Post" ? "active" : String.Empty)">
                                <i class="fa-solid fa-ranking-star fa-lg"></i>
                                <span class="ml-2">Post</span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(ViewData["Title"]?.ToString() == "Visitor" ? "active" : String.Empty)" href="#">
                                <i class="fa-solid fa-user fa-lg"></i>
                                <span class="ml-2">Visitor</span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(ViewData["Title"]?.ToString() == "Officer" ? "active" : String.Empty)" href="#">
                                <i class="fa-solid fa-user-tie fa-lg"></i>
                                <span class="ml-2">Officer</span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(ViewData["Title"]?.ToString() == "Workdays" ? "active" : String.Empty)" href="#">
                                <i class="fa-solid fa-calendar-days fa-lg"></i>
                                <span class="ml-2">Workdays</span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(ViewData["Title"]?.ToString() == "Appointment" ? "active" : String.Empty)" href="#">
                                <i class="fa-solid fa-calendar-check fa-lg"></i>
                                <span class="ml-2">Appointment</span>
                            </a>
                        </li>                        
                        <li class="nav-item">
                            <a class="nav-link @(ViewData["Title"]?.ToString() == "Activity" ? "active" : String.Empty)" href="#">
                                <i class="fa-regular fa-clipboard-list-check fa-lg"></i>
                                <span class="ml-2">Activity</span>
                            </a>
                        </li>
                    </ul>
                </div>
            </nav>
            <main class="col-md-9 ml-sm-auto col-lg-10 px-md-4 py-4">
                @RenderBody()
            </main>
        </div>
    </div>

    <partial name="Partial/Toastr/Notification" />

    <!--------------------------[Bootstrap JS]----------------------------->
    <script src="~/lib/bootstrap/bootstrap.min.js"></script>

    <!-------------------------[Fontawesome JS]---------------------------->
    <script src="~/lib/fontawesome-pro/js/all.js"></script>

    <!---------------------------[Custom JS]------------------------------->
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
